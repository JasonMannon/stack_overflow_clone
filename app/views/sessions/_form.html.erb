<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %><br>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password, params[:password] %>
  </div></br>
  <div class="actions"><%= submit_tag "Log In", :class => "btn btn-success" %>
  </div>
<% end %>
